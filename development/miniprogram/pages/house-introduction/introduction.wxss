/**introduction.wxss**/
@import "../../style/stylesheet.wxss";

.intro{
  font-size: 14px;
}
.tel{
  font-size: 14px;
  text-decoration: underline;
  color: #108ee9;
}

.img {
  text-align: center;
  margin-left: 1%;
  margin-right: 1%;
  width: 98%;
}

 .card {
  display: flex;
  background-color: #fff;
  border-radius: 4px;
  margin: 6px 10px;
  min-height: 81px;
  flex-direction: column;
  padding: 0 5px
} 

.card-body {
  display: flex;
  align-items: center;
  width: 98%;
  margin-left: 1%;
  margin-right: 1%;
  margin-top: -20px;
  border-radius: 45px;
  background-color: #fff;
  box-shadow: 2px 2px 2px 2px rgba(169, 170, 172, 0.5), -2px 2px 2px 2px rgba(169, 170, 172, 0.5) 
}

.card-name {
  font-size: 18px;
  font-weight:600;
  line-height: 25px;
  color: #333;
  margin-bottom: 4px;
}
.card-subtitle {
  font-size: 14px;
  line-height: 20px;
  color: #999;
  margin-bottom: 2px
}
.card-line {
  background: #d9d9d9;
  width: 98%;
  height: 3px;
  margin-bottom: 10px;
  margin-left: 1%;
  margin-right: 1%;
}

.avatar{
    height: 90px;
    width: 90px;
    border-radius: 45px;
    margin-left: 5%;
    margin-right: 10%;
    margin-bottom: 5%;
    margin-top: 5%;
}


.h1{
  text-align: center;
}

.readmore{
  margin: 50rpx;
}

.overview {
  padding: 0 60rpx;
}

.title-tip {
  font-size: 28rpx;
  margin-bottom: 22rpx;
}
.content {
  font-size: 24rpx;
  margin-top: 30rpx;
}
/* 超出3行隐藏多余部分并且显示省略号 */
.hidden{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.readmore-tip {
  color: #196a99;
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: right;
}